<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/first_number"
        android:layout_height="wrap_content"

        android:layout_marginEnd="8dp"

        style="@style/DefaultStyleForPinEditTexts"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"

        tools:text="1"/>

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/second_number"
        android:layout_height="wrap_content"

        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"

        style="@style/DefaultStyleForPinEditTexts"

        app:layout_constraintTop_toTopOf="@id/first_number"
        app:layout_constraintStart_toEndOf="@id/first_number"
        app:layout_constraintBottom_toBottomOf="@id/first_number"

        tools:text=" "/>

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/third_number"
        android:layout_height="wrap_content"

        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"

        style="@style/DefaultStyleForPinEditTexts"

        app:layout_constraintTop_toTopOf="@id/second_number"
        app:layout_constraintStart_toEndOf="@id/second_number"
        app:layout_constraintBottom_toBottomOf="@id/second_number"/>

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/forth_number"
        android:layout_height="wrap_content"

        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"

        style="@style/DefaultStyleForPinEditTexts"

        app:layout_constraintStart_toEndOf="@id/third_number"
        app:layout_constraintTop_toTopOf="@id/third_number"
        app:layout_constraintBottom_toBottomOf="@id/third_number"/>

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/fives_number"
        android:layout_height="wrap_content"

        android:layout_marginStart="8dp"

        style="@style/DefaultStyleForPinEditTexts"

        app:layout_constraintStart_toEndOf="@id/forth_number"
        app:layout_constraintTop_toTopOf="@id/forth_number"
        app:layout_constraintBottom_toBottomOf="@id/forth_number"/>

</androidx.constraintlayout.widget.ConstraintLayout>