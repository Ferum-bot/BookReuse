<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="DefaultStyleForTextView">
        <item name="fontFamily">@font/roboto_mono</item>
        <item name="android:textColor">@color/base_white</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Headline5</item>
    </style>

    <style name="DefaultStyleForBigTextView" parent="DefaultStyleForTextView">
        <item name="android:textSize">@dimen/big_text_size</item>
    </style>

    <style name="DefaultStyleForMiddleTextView" parent="DefaultStyleForTextView">
        <item name="android:textSize">@dimen/middle_text_size</item>
    </style>

    <style name="DefaultStyleForSmallTextView" parent="DefaultStyleForTextView">
        <item name="android:textSize">@dimen/small_text_size</item>
    </style>

    <style name="DefaultStyleForAuthorizationTextViews" parent="DefaultStyleForTextView">
        <item name="android:textSize">@dimen/less_middle_text_size</item>
    </style>

    <style name="DefaultStyleForAuthorizationSmallLabels" parent="DefaultStyleForTextView">
        <item name="android:textSize">@dimen/authorization_labels_text_size</item>
        <item name="android:textColor">@color/light_gray</item>
    </style>

    <style name="DefaultStyleForAuthorizationErrorSmallLabels" parent="DefaultStyleForAuthorizationSmallLabels">
        <item name="android:textColor">@color/base_red</item>
    </style>

    <style name="DefaultStyleForAuthorizationDescriptionLabels" parent="DefaultStyleForAuthorizationSmallLabels">
        <item name="android:textSize">@dimen/authorization_labels_description_text_size</item>
    </style>

    <style name="DefaultStyleForStuffLabels" parent="DefaultStyleForAuthorizationDescriptionLabels">
        <item name="android:textSize">@dimen/stuff_labels_text_size</item>
        <item name="android:textColor">@color/base_white</item>
    </style>

    <style name="DefaultStyleForStuffDescriptions" parent="DefaultStyleForStuffLabels">
        <item name="android:textSize">@dimen/bottom_sheet_text_size</item>
    </style>

    <style name="DefaultStyleForBottomSheetTextViews" parent="DefaultStyleForMiddleTextView">
        <item name="android:textSize">@dimen/bottom_sheet_text_size</item>
        <item name="android:layout_marginStart">16dp</item>
    </style>

    <style name="DefaultStyleForNotAuthorizationTextView" parent="DefaultStyleForMiddleTextView">
        <item name="android:textColor">@color/base_orange</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:textSize">@dimen/less_middle_text_size</item>
    </style>

    <style name="DefaultStyleForBottomNavigation" parent="@style/Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="itemIconSize">@dimen/icon_size_for_bottom_navigation</item>
        <item name="labelVisibilityMode">unlabeled</item>
        <item name="menu">@menu/bottom_navigation_menu</item>
        <item name="itemIconTint">@drawable/base_selector_for_bottom_navigation_items</item>
        <item name="itemRippleColor">@color/base_gray</item>
        <item name="android:background">@color/light_black</item>
        <item name="top_stoke_width">@dimen/stroke_width_for_bottom_navigation</item>
        <item name="top_stroke_color">@android:color/white</item>
    </style>

    <style name="DefaultStyleForAddButton">
        <item name="android:backgroundTint">@color/light_black</item>
        <item name="android:background">@drawable/background_for_add_button</item>
        <item name="android:elevation">7dp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="DefaultStyleForToolBar">
        <item name="android:background">@drawable/ic_background_for_tool_bar</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:textColor">@color/base_white</item>
        <item name="bottom_stoke_width">@dimen/stroke_width_for_bottom_navigation</item>
        <item name="bottom_stroke_color">@color/base_white</item>
    </style>

    <style name="DefaultStyleForBigButtons" parent="DefaultStyleForTextView">
        <item name="android:textSize">@dimen/text_size_for_big_buttons</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@drawable/background_for_big_buttons</item>
        <item name="backgroundTint">@color/base_yellow</item>
        <item name="textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingStart">@dimen/padding_horizontal_for_big_buttons</item>
        <item name="android:paddingEnd">@dimen/padding_horizontal_for_big_buttons</item>
        <item name="android:paddingTop">@dimen/padding_vertical_for_big_buttons</item>
        <item name="android:paddingBottom">@dimen/padding_vertical_for_big_buttons</item>
    </style>

    <style name="DefaultStyleForBigAuthorizationButtons" parent="DefaultStyleForBigButtons">
        <item name="android:textSize">@dimen/text_size_for_big_authorization_buttons</item>
        <item name="android:paddingStart">@dimen/padding_horizontal_for_big_authorization_buttons</item>
        <item name="android:paddingEnd">@dimen/padding_horizontal_for_big_authorization_buttons</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="Theme.Design.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetStyle</item>
    </style>

    <style name="BottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="DefaultStyleForBottomAppBar">
        <item name="contentInsetEnd">0dp</item>
        <item name="contentInsetStart">0dp</item>
        <item name="contentInsetLeft">0dp</item>
        <item name="contentInsetRight">0dp</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="hideOnScroll">true</item>
        <item name="layout_behavior">com.google.android.material.bottomappbar.BottomAppBar$Behavior</item>
    </style>

    <style name="DefaultStyleForEditText" parent="DefaultStyleForTextView">
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingEnd">8dp</item>
    </style>

    <style name="DefaultStyleForAuthorizationEditText" parent="DefaultStyleForEditText">
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="android:background">@drawable/background_for_authoriztion_edit_texts</item>
        <item name="maxLines">1</item>
        <item name="singleLine">true</item>
        <item name="hintEnabled">true</item>
        <item name="hintTextColor">@color/base_white</item>
    </style>

    <style name="DefaultStyleForOrangeButtons" parent="DefaultStyleForTextView">
        <item name="android:textColor">@color/base_orange</item>
        <item name="android:textSize">@dimen/orange_button_text_size</item>
        <item name="android:background">@drawable/background_for_orange_buttons</item>
        <item name="background">@drawable/background_for_orange_buttons</item>
        <item name="android:layout_height">35dp</item>
        <item name="textAllCaps">false</item>
        <item name="android:paddingStart">@dimen/padding_horizontal_for_big_authorization_buttons</item>
        <item name="android:paddingEnd">@dimen/padding_horizontal_for_big_authorization_buttons</item>
        <item name="android:paddingTop">@dimen/padding_vertical_for_orange_buttons</item>
        <item name="android:paddingBottom">@dimen/padding_vertical_for_orange_buttons</item>
    </style>

    <style name="DefaultStyleForPinEditTexts" parent="DefaultStyleForTextView">
        <item name="android:layout_width">@dimen/width_for_pin_edit_texts</item>
        <item name="maxLines">1</item>
        <item name="android:maxLength">1</item>
        <item name="singleLine">true</item>
        <item name="android:gravity">center</item>
        <item name="android:inputType">number</item>
        <item name="android:textSize">@dimen/middle_text_size</item>
        <item name="android:background">@drawable/background_for_pin_edit_texts</item>
        <item name="android:paddingBottom">@dimen/bottom_padding_for_input_edit_texts_pin_view</item>
    </style>

    <style name="DefaultStyleForSwitchToggle" parent="DefaultStyleForTextView">
        <item name="track">@drawable/track_for_switch_toggle</item>
        <item name="android:thumb">@drawable/thumb_for_switch_toggle</item>
        <item name="android:checked">true</item>
    </style>

    <style name="DefaultStyleForSwitchLabels" parent="DefaultStyleForTextView">
        <item name="android:textSize">@dimen/bottom_sheet_text_size</item>
    </style>

    <style name="DefaultStyleForSmallCardView">
        <item name="android:background">@drawable/background_for_small_advert_card_view</item>
        <item name="background">@drawable/background_for_small_advert_card_view</item>
        <item name="backgroundTint">@drawable/background_for_small_advert_card_view</item>
        <item name="cardCornerRadius">@dimen/small_advert_item_radius</item>
        <item name="cardBackgroundColor">@color/light_black</item>
        <item name="android:layout_margin">4dp</item>
    </style>

    <style name="DefaultStyleForCardView" parent="DefaultStyleForSmallCardView">
        <item name="android:layout_margin">0dp</item>
        <item name="cardCornerRadius">@dimen/profile_card_view_radius</item>
    </style>

    <style name="DefaultStyleForImageView">
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="DefaultStyleForSmallAdvertLabels" parent="DefaultStyleForTextView">
        <item name="android:textSize">@dimen/small_advert_label_text_size</item>
        <item name="android:maxLines">2</item>
        <item name="android:minLines">2</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="DefaultStyleForSmallAdvertAuthorLabels" parent="DefaultStyleForTextView">
        <item name="android:textSize">@dimen/small_advert_label_text_size</item>
        <item name="android:textColor">@color/light_gray</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:minLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="DefaultStyleForSmallAdvertDateTextView" parent="DefaultStyleForSmallAdvertAuthorLabels">
        <item name="android:textSize">@dimen/small_advert_date_text_size</item>
        <item name="android:textColor">@color/base_gray</item>
    </style>

    <style name="DefaultStyleForStuffDateTextView" parent="DefaultStyleForSmallAdvertDateTextView">
        <item name="android:textSize">@dimen/stuff_date_text_size</item>
    </style>

    <style name="DefaultStyleForSmallItemProfileImageView">
        <item name="civ_border_width">0dp</item>
    </style>

    <style name="DefaultStyleForSmallReviewItemNicknameLabel" parent="DefaultStyleForSmallAdvertAuthorLabels">
        <item name="android:textColor">@color/base_blue</item>
        <item name="android:textSize">@dimen/small_review_item_nickname_text_size</item>
    </style>

    <style name="DefaultStyleForNickNameLabel" parent="DefaultStyleForSmallReviewItemNicknameLabel">
        <item name="android:textSize">@dimen/nickname_label_text_size</item>
    </style>

    <style name="DefaultStyleForSmallReviewItemDescription" parent="DefaultStyleForTextView">
        <item name="android:textSize">@dimen/small_review_item_description_text_size</item>
        <item name="android:textColor">@color/light_gray</item>
        <item name="android:minLines">5</item>
        <item name="android:maxLines">5</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="DefaultStyleForSmallReviewItemReadAllTextView" parent="DefaultStyleForSmallReviewItemNicknameLabel">
        <item name="android:text">@string/read_more</item>
    </style>

    <style name="DefaultStyleForSmallReviewItemNumberOfLikesOrDislikes" parent="DefaultStyleForTextView">
        <item name="android:textSize">@dimen/small_review_item_like_or_dislike_text_size</item>
    </style>

    <style name="DefaultStyleForHorizontalReviewListLabel" parent="DefaultStyleForTextView">
        <item name="android:textSize">@dimen/horizontal_review_list_label_text_size</item>
    </style>

    <style name="DefaultStyleForHorizontalLayoutWithTypesAdvertGridTextView" parent="DefaultStyleForTextView">
        <item name="android:textColor">@color/base_gray</item>
        <item name="android:textSize">@dimen/horizontal_advert_grid_types_text_view_text_size</item>
        <item name="android:gravity">center_horizontal</item>
    </style>
</resources>