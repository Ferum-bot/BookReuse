<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="DefaultStyleForTextView">
        <item name="fontFamily">@font/roboto_mono</item>
        <item name="android:textColor">@color/base_white</item>
    </style>

    <style name="DefaultStyleForBigTextView" parent="DefaultStyleForTextView">
        <item name="android:textSize">@dimen/big_text_size</item>
    </style>

    <style name="DefaultStyleForMiddleTextView" parent="DefaultStyleForTextView">
        <item name="android:textSize">@dimen/middle_text_size</item>
    </style>

    <style name="BaseStyleForBottomNavigation" parent="@style/Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="itemIconSize">@dimen/icon_size_for_bottom_navigation</item>
        <item name="labelVisibilityMode">unlabeled</item>
        <item name="menu">@menu/bottom_navigation_menu</item>
        <item name="itemIconTint">@drawable/base_selector_for_bottom_navigation_items</item>
        <item name="itemRippleColor">@color/base_yellow</item>
        <item name="android:background">@color/light_black</item>
    </style>
    
</resources>